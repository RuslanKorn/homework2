<%= form_for @movie, :html => {:multipart => true} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: 24 %>

  <%= f.label :rating %>
  <%= f.select(:rating, options_for_select(all_ratings))%>

  <%= f.label :release_date %>
  <%= f.text_field :release_date, size: 24 %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "35x6" %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
