<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: 30 %>

  <%= f.label :rating %>
  <%= f.select(:rating, options_for_select(all_ratings))%>

  <%= f.label :release_date %>
  <%= f.text_field :release_date, size: 30 %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "24x6" %>
  <br>
  <%= f.submit "Submit" %>
<% end %>
