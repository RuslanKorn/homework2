<%= form_for @movie, :html => {:multipart => true} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: 24 %>

  <%= f.label :rating %>
  <%= f.select(:rating, options_for_select(all_ratings))%>

  <%= f.label :release_date %>
  <%= f.text_field :release_date, size: 24 %>

  <%= f.label :avatar %>
  <%= image_tag(@movie.avatar.medium.url) if @movie.avatar? %> 
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %> 

  <%= f.label :remove_avatar %>
  <%= f.check_box :remove_avatar %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "24x6" %>
  <%= f.hidden_field(:draft,{value: :true}) %> 

  <% if current_user.admin %>
  <%= f.label :draft %>
  <%= f.check_box(:draft) %>
  <% end %>

  <br>
  <%= f.submit "Submit" %>
<% end %>
