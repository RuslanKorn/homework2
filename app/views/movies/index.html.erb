<h1>All Movies</h1>
<%= render 'checkbox' %>
<table id="movies">
  <thead>
    <tr>
      <th class="<%= "highlight" if session[:sort_by] == "title" %>">
        <%= link_to "Movie Title", movies_path(sort_by: "title")%>
      </th>
      <th>Rating</th>
      <th class="<%= "highlight" if session[:sort_by] == "release_date" %>">
        <%= link_to "Release Date", movies_path(sort_by: "release_date") %>
      </th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr class="<%=cycle('list_line_odd','list_line_even') %>">
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td><%= truncate(movie.description) %> <%= link_to "Moreâ†’", movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

