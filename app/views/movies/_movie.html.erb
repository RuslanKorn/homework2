<h2>Details about <%= movie.title %></h2>

<%= image_tag movie.avatar.medium.url %>
<ul id="details">
  <li>Creator: <%= movie.user.email %></li>
  <li>Rating: <%= movie.rating %></li>
  <li>Released on: <%= movie.release_date %></li>
</ul>

<h3>Description</h3>
<% if params[:param] == 'all' %>
  <p class="description"><%= movie.description %></p>
<% else %>
  <p class="description"><%= truncate(movie.description, length: 100) %> <%= link_to "Moreâ†’", movie_path(movie, param: 'all') %></p>
<% end %>
